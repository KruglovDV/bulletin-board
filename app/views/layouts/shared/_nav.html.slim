.container.mb-2
  .d-flex.flex-wrap.align-items-center.py-2.border-bottom
    .navbar.navbar-expand-md.navbar-light.me-auto
      = link_to t('.main_page'), root_path, class: 'navbar-brand me-md-4'
      - if policy(Bulletin).new?
        = link_to t('.add'), new_bulletin_path, class: 'nav-link text-dark'
    ul.nav.nav-pills
      li.nav-item.me-2
        - if signed_in?
          = link_to t('.exit'), sign_out_path, method: :delete, class: 'nav-link text-dark'
        - else
          = link_to auth_request_path(:github), method: :post do
            i.fa-brands.fa-github
